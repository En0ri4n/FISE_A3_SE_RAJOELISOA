<Window x:Class="Easy_Save_WPF.Options_PopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Flags="clr-namespace:FamFamFam.Flags.Wpf;assembly=FamFamFam.Flags.Wpf"
        Title="Options" Height="670" Width="1004" WindowStartupLocation="CenterOwner" Background="#f4f4f4">
    <Window.Resources>
        <Flags:CountryIdToFlagImageSourceConverter x:Key="CountryIdToFlagImageSourceConverter" />
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Options Configuration" FontSize="28" FontWeight="Bold" Margin="0 0 0 20" Grid.Row="0" HorizontalAlignment="Center"/>

        <!-- Corps -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <!-- Language -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 16">
                <TextBlock Text="Language:" FontSize="16" Width="150" VerticalAlignment="Center"/>
                <ComboBox SelectedItem="{Binding SelectedCountry}" 
                  ItemsSource="{Binding AvailablesLanguages}" 
                  UseLayoutRounding="True" 
                  SelectedIndex="12" Width="200" FontSize="14">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="Flags:CountryData">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding LangId, Converter={StaticResource CountryIdToFlagImageSourceConverter}}" 
                                   Width="23" Height="18" 
                                   Stretch="None" 
                                   RenderOptions.BitmapScalingMode="HighQuality" 
                                   VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Log Type -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 16">
                <TextBlock Text="Log Type:" FontSize="16" Width="150" VerticalAlignment="Center"/>
                <ComboBox Name="LogTypeComboBox" Width="200" FontSize="14">
                    <ComboBoxItem Content="JSON"/>
                    <ComboBoxItem Content="XML"/>
                </ComboBox>
            </StackPanel>

            <!-- Daily Log Directory -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 16">
                <TextBlock Text="Daily Log Dir:" FontSize="16" Width="150" VerticalAlignment="Center"/>
                <TextBlock Name="DailyLogPathText" Text="C:\Logs\Daily" FontSize="14" Width="400" Background="#e0e0e0" Padding="5"/>
                <Button Content="Browse" Click="ChangeDailyLogPath_Click" Margin="10 0 0 0"/>
            </StackPanel>

            <!-- Status Log Directory -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 16">
                <TextBlock Text="Status Log Dir:" FontSize="16" Width="150" VerticalAlignment="Center"/>
                <TextBlock Name="StatusLogPathText" Text="C:\Logs\Status" FontSize="14" Width="400" Background="#e0e0e0" Padding="5"/>
                <Button Content="Browse" Click="ChangeStatusLogPath_Click" Margin="10 0 0 0"/>
            </StackPanel>

            <!-- Extensions -->
            <StackPanel Margin="0 0 0 16">
                <TextBlock Text="File Extensions for Encryption:" FontSize="16"/>
                <ListBox Name="EncryptionExtensionsList" Height="80" Margin="0 5"/>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBox Name="NewExtensionBox" Width="150" Margin="0 0 10 0"/>
                    <Button Content="Add" Click="AddExtension_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Processus blacklist -->
            <StackPanel>
                <TextBlock Text="Blacklisted Processes:" FontSize="16"/>
                <ListBox Name="BlacklistedProcessesList" Height="80" Margin="0 5"/>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBox Name="NewProcessBox" Width="150" Margin="0 0 10 0"/>
                    <Button Content="Add" Click="AddProcess_Click"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>

        <!-- Boutons bas -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Save" Width="100" Height="30" Margin="0 0 10 0" Click="SaveOptions_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
