<Page x:Class="Easy_Save_WPF.Options_Language_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CLEA.EasySaveCore.L10N;assembly=Easy-Save-Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Options_Language_Page" Background="#f3f3f3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100">
            </RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60">Language</Label>
        <ListBox Name="languagesListBox"  Grid.Row="1" IsSynchronizedWithCurrentItem="True"/>
        <Button Grid.Row="1" Height="60" Width="100" HorizontalAlignment="Right" Margin="0,252,25,22" >Apply</Button>
        <Button Grid.Row="1" Height="60" Width="100" HorizontalAlignment="Left" Margin="25,252,0,22" >Cancel</Button>
    </Grid>
</Page>
