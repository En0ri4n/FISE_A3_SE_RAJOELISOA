<Page x:Class="Easy_Save_WPF.Options_StatusLog_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CLEA.EasySaveCore.L10N;assembly=Easy-Save-Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Options_StatusLog_Page" Background="#f3f3f3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100">
            </RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60">Status Log Path</Label>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" >Actual path :</Label>
        <TextBox Grid.Row="1" Text="{Binding DailyLogPath, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="30" Width="642" Margin="0,0,0,253"/>

        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Margin="3,157,0,0" >New path :</Label>
        <TextBox Grid.Row="1" Text="{Binding jobName, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="30" Width="642" Margin="3,0,0,96"/>
        <Button Grid.Row="1" Margin="670,203,24,97" >
            <Image Source="/assets/folder_icon.png"></Image>
        </Button>

        <Button Grid.Row="1" Height="60" Width="100" HorizontalAlignment="Right" Margin="0,252,25,22" >Delete</Button>
        <Button Grid.Row="1" Height="60" Width="100" HorizontalAlignment="Left" Margin="25,252,0,22" >Cancel</Button>
        
    </Grid>
</Page>
