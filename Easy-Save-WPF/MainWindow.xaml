<Window x:Class="Easy_Save_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Easy_Save_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100">
            </RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60">Easy Save</Label>
        
        <Menu Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel  Orientation="Vertical">
                <MenuItem Header="Manage jobs" FontSize="40" HorizontalAlignment="Center"></MenuItem>
                <MenuItem Header="Options" FontSize="40" HorizontalAlignment="Center"></MenuItem>
                <MenuItem Header="Quit" FontSize="40" HorizontalAlignment="Center"></MenuItem>
            </StackPanel>
        </Menu>
        
    </Grid>
</Window>
