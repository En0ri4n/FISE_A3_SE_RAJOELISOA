<Page x:Class="Easy_Save_WPF.ManageJobs_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Easy_Save_WPF"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
      Title="ManageJobs_Page" Background="#f3f3f3">
    <!--TODO DYNAMIC FONT SIZE-->
    <!--Height="1000"
         Width="1920"-->
    <!--FIXME HEIGHT & WIDTH should be this size BUT ARE NOT BECAUSE MICROSFT, hardcoded here for clarity (probably should be removed) -->

    <Grid Name="ManageJobs_Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Height="80" Width="144" HorizontalAlignment="Left" Margin="42,20,0,20" Click="QuitBTN_Click" Background="#f3f3f3" BorderThickness="0" Foreground="Red" FontSize="60">Quit</Button>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80">Manage Jobs</Label>
            <Button Height="70" Width="70" HorizontalAlignment="Left" Margin="241,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/options_icon.png" Height="70" Width="70"></Image>
            </Button>
            <Label VerticalAlignment="Top" FontSize="40" Margin="0,38,42,0" HorizontalAlignment="Right" Width="179">Daily log</Label>
            <Label VerticalAlignment="Top" FontSize="40" Margin="0,38,257,0" HorizontalAlignment="Right" Width="203">Status log</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <CheckBox Grid.Row="0" Margin="10,0,-10,0" HorizontalAlignment="Left" VerticalAlignment="Center"  IsChecked="{Binding Selected}">Select/Deselect All
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <Button Height="60" Width="73" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-156,0,0,0" Background="#f3f3f3" BorderThickness="0" Click="RunJob_Click">
                <Image Source="/assets/play_icon.png" RenderTransformOrigin="-0.558,0.568" Height="48" Width="48"></Image>
            </Button>
            <Button Height="60" Width="73" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" Background="#f3f3f3" BorderThickness="0" Click="PauseBTN_Click">
                <Image Source="/assets/pause_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" VerticalAlignment="Center" Margin="156,0,0,0" Background="#f3f3f3" BorderThickness="0" Click="StopBTN_Click">
                <Image Source="/assets/stop_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" VerticalAlignment="Center" Margin="0,0,109,0" Background="#f3f3f3" BorderThickness="0" Click="DeleteWindow_Click" HorizontalAlignment="Right">
                <Image Source="/assets/delete_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" VerticalAlignment="Center" Margin="0,0,31,0" Background="#f3f3f3" BorderThickness="0" Click="CreateWindow_Click" HorizontalAlignment="Right">
                <Image Source="/assets/add_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>

            <DataGrid Name="jobsDatagrid"  Grid.Row="2"  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  >

            </DataGrid>
            <Border Grid.Row="1" BorderThickness="2" BorderBrush="Black" Margin="3"></Border>
            <Border Grid.Row="2" BorderThickness="2" BorderBrush="Black" Margin="3"></Border>
        </Grid>
    </Grid>
</Page>
