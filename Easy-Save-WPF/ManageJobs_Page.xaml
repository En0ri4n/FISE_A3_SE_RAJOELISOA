<Page x:Class="Easy_Save_WPF.ManageJobs_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Easy_Save_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ManageJobs_Page" Background="#f3f3f3">

    <Grid Name="ManageJobs_Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Height="60" Width="100" HorizontalAlignment="Left" Margin="86,20,0,20" Click="QuitBTN_Click" Background="#f3f3f3" BorderThickness="0" Foreground="Red" FontSize="40">Quit</Button>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80">Manage Jobs</Label>
            <Button Height="60" Width="70" HorizontalAlignment="Left" Margin="241,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/options_icon.png"></Image>
            </Button>
            <Button Height="60" Width="73" HorizontalAlignment="Left" Margin="1707,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/delete_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" HorizontalAlignment="Left" Margin="1785,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/add_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" HorizontalAlignment="Left" Margin="1260,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/play_icon.png" RenderTransformOrigin="-0.558,0.568" Height="48" Width="48"></Image>
            </Button>
            <Button Height="60" Width="73" HorizontalAlignment="Left" Margin="1333,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/pause_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" HorizontalAlignment="Left" Margin="1411,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/stop_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <CheckBox Grid.Row="0" Margin="10,0,-10,0" IsChecked="{Binding Selected}">Select/Deselect All
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <Label></Label>
        </Grid>
    </Grid>
</Page>
