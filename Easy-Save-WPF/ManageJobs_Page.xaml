<Page x:Class="Easy_Save_WPF.ManageJobs_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Easy_Save_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageJobs_Page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100">
            </RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Height="60" Width="100" HorizontalAlignment="Left" Margin="20,20,0,20">Quit</Button>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60">Manage Jobs</Label>
            <Button Height="60" Width="100" HorizontalAlignment="Left" Margin="680,20,0,20">Options</Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*">
                </ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="5" Margin="5"></Border>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="5" Margin="5"></Border>

            <StackPanel  Grid.Column="1"  Orientation="Vertical" VerticalAlignment="Center">
                <Button Height="50">Create</Button>
                <Button Height="50">Run One</Button>
                <Button Height="50">Run All</Button>
                <Button Height="50">Modify</Button>
                <Button Height="50">Delete</Button>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
