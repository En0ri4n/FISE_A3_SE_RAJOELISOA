<Page x:Class="Easy_Save_WPF.ManageJobs_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Easy_Save_WPF"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
      Title="ManageJobs_Page" Background="#f3f3f3">
    <!--TODO DYNAMIC FONT SIZE-->

    <Grid Name="ManageJobs_Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Height="120" Width="144" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,20,0,20" Click="QuitBTN_Click" Background="#f3f3f3" BorderThickness="0" Foreground="Red" FontSize="60">Quit</Button>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80">Manage Jobs</Label>
            <Button Height="70" Width="70" HorizontalAlignment="Left" Margin="241,20,0,20" Background="#f3f3f3" BorderThickness="0" Click="OptionsBTN_Click">
                <Image Source="/assets/options_icon.png" Height="70" Width="70"></Image>
            </Button>
            <Button Width="150" Background="#f3f3f3" BorderBrush="#f3f3f3" Content="Daily log" FontSize="30" HorizontalAlignment="Right" Margin="0,38,42,0" Click="dailyLogBTN_Click"></Button>
            <Button Width="150" Background="#f3f3f3" BorderBrush="#f3f3f3" Content="Status log" FontSize="30" HorizontalAlignment="Right" Margin="0,38,257,0" Click="statusLogBTN_Click"></Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <CheckBox Grid.Row="0" Margin="10,0,-10,0" HorizontalAlignment="Left" VerticalAlignment="Center" IsChecked="{Binding Selected}">Select/Deselect All
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <Button Name="runBTN" Height="60" Width="73" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-156,0,0,0" Background="#f3f3f3" BorderThickness="0" Click="RunJob_Click">
                <Image Source="/assets/play_icon.png" RenderTransformOrigin="-0.558,0.568" Height="48" Width="48"></Image>
            </Button>
            <Button Name="pauseBTN" Height="60" Width="73" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" Background="#f3f3f3" BorderThickness="0" Click="PauseBTN_Click">
                <Image Source="/assets/pause_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Name="stopBTN" Height="60" Width="73" VerticalAlignment="Center" Margin="156,0,0,0" Background="#f3f3f3" BorderThickness="0" Click="StopBTN_Click">
                <Image Source="/assets/stop_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Name="deleteBTN" Height="60" Width="73" VerticalAlignment="Center" Margin="0,0,109,0" Background="#f3f3f3" BorderThickness="0" Click="DeleteWindow_Click" HorizontalAlignment="Right">
                <Image Source="/assets/delete_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>
            <Button Height="60" Width="73" VerticalAlignment="Center" Margin="0,0,31,0" Background="#f3f3f3" BorderThickness="0" Click="CreateWindow_Click" HorizontalAlignment="Right">
                <Image Source="/assets/add_icon.png" RenderTransformOrigin="-0.558,0.568"></Image>
            </Button>

            <DataGrid Name="jobsDatagrid"  Grid.Row="1"  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" AutoGenerateColumns="False" MouseDoubleClick="ModifyWindow_Click" SelectionUnit="FullRow" SelectionChanged="DataGridSelectionChanged" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Source"   Binding="{Binding Source}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Target"   Binding="{Binding Target}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <Border Grid.Row="1" BorderThickness="2" BorderBrush="Black" Margin="3"></Border>
        </Grid>
    </Grid>
</Page>
