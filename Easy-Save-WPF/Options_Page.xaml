<Page x:Class="Easy_Save_WPF.Options_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Easy_Save_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Options_Page" Background="#f3f3f3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100">
            </RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60">Options</Label>

        <Menu Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel  Orientation="Vertical">
                <MenuItem Header="Language" FontSize="40" HorizontalAlignment="Center" Click="LanguageBTN_Click"></MenuItem>
                <MenuItem Header="Log Type" FontSize="40" HorizontalAlignment="Center" Click="LogTypeBTN_Click"></MenuItem>
                <MenuItem Header="Status log Path" FontSize="40" HorizontalAlignment="Center" Click="StatusLogBTN_Click"></MenuItem>
                <MenuItem Header="Daily log Path" FontSize="40" HorizontalAlignment="Center" Click="DailyLogBTN_Click"></MenuItem>
                <MenuItem Header="Return" FontSize="40" HorizontalAlignment="Center" Click="ReturnBTN_Click"></MenuItem>
            </StackPanel>
        </Menu>
    </Grid>
</Page>
